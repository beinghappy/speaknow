<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  android:key="root_screen">

    <PreferenceCategory
            android:title="常用">
        <ListPreference
                android:key="nlu"
                android:entries="@array/position_list"
                android:entryValues="@array/position_list"
                android:title="机位选择"
                android:summary=""
                android:defaultValue="@string/nlu_default"
                android:dialogTitle="设置机位"/>

        <ListPreference
                android:key="infile"
                android:entries="@array/time_space_list"
                android:entryValues="@array/time_space_list"
                android:title="每项的间隔，如50到100"
                android:summary=""
                android:defaultValue="@string/sample_default"
                android:dialogTitle="间隔时间，以秒为单位"/>

        </PreferenceCategory>
</PreferenceScreen>